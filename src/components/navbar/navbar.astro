---
import Container from "@components/container.astro";
import Dropdown from "./dropdown.astro";
import Link from "@components/ui/link.astro";
import ThemeToggle from "./ThemeToggle.astro";

const menuitems = [
  {
    title: "Features",
    path: "#",
    children: [
      { title: "Meows", path: "/" },
      { title: "Purrs", path: "/" },
      { title: "Cuddles", path: "/" },
    ],
  },
  {
    title: "Pricing",
    path: "/pricing",
  },
  {
    title: "About",
    path: "/about",
  },
  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "Contact",
    path: "/contact",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <div class="flex w-full lg:w-auto items-center justify-between">
      <a href="/" class="text-lg">
        <span class="font-bold text-slate-800 dark:text-white">Cats</span>
        <span class="text-slate-500 dark:text-slate-400">notDoctors</span>
      </a>
    </div>
    <nav class="w-full lg:w-auto mt-2 lg:flex lg:mt-0">
      <ul class="flex flex-col lg:flex-row lg:gap-3">
        {
          menuitems.map((item) => (
            item.children ? (
              <Dropdown title={item.title} children={item.children} />
            ) : (
              <li>
                <a href={item.path} class="flex lg:px-3 py-2 text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">
                  {item.title}
                </a>
              </li>
            )
          ))
        }
      </ul>
    </nav>
    <div class="hidden lg:flex items-center gap-4">
      <a href="#" class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">Log in</a>
      <Link href="#" size="md">Sign up</Link>
      <ThemeToggle />
    </div>
  </header>
</Container>
